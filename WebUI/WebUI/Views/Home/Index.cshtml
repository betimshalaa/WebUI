
@{
    ViewData["Title"] = "Map";
}

<!--============================= Google Map ============== -->

<div class="container-fluid">
    <br />
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="statistic-block block">
                <div class="progress-details d-flex align-items-end justify-content-between">
                    <div class="title">
                        <div class="icon"><i class="icon-user-1"></i></div><strong>Current Active Fires</strong>
                    </div>
                    <div class="number dashtext-1">27</div>
                </div>
                <div class="progress progress-template">
                    <div role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-template dashbg-1"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="statistic-block block">
                <div class="progress-details d-flex align-items-end justify-content-between">
                    <div class="title">
                        <div class="icon"><i class="icon-contract"></i></div><strong>Predicted Fires</strong>
                    </div>
                    <div class="number dashtext-2">125</div>
                </div>
                <div class="progress progress-template">
                    <div role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-template dashbg-2"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="statistic-block block">
                <div class="progress-details d-flex align-items-end justify-content-between">
                    <div class="title">
                        <div class="icon"><i class="icon-paper-and-pencil"></i></div><strong>In Emergency</strong>
                    </div>
                    <div class="number dashtext-3">13</div>
                </div>
                <div class="progress progress-template">
                    <div role="progressbar" style="width: 55%" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-template dashbg-3"></div>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="statistic-block block">
                <div class="progress-details d-flex align-items-end justify-content-between">
                    <div class="title">
                        <div class="icon"><i class="icon-writing-whiteboard"></i></div><strong>Near your location:</strong>
                    </div>
                    <div class="number dashtext-4">0</div>
                </div>
                <div class="progress progress-template">
                    <div role="progressbar" style="width: 35%" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100" class="progress-bar progress-bar-template dashbg-4"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="map">
    <div class="map-blink"></div>
</div>

<!--============================= End Google Map ========== -->
<!--============================= Modal =================== -->

<div id="myModal" class="modal fade" style="background-color: #22252A;" role="dialog">
    <div class="modal-dialog modal-lg" style="width:750px !important">

        <!-- Modal content-->
        <div class="modal-content" style="width: 750px">
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xs-12">
       
                            <div class="container-fluid">
                                <div class="row d-flex align-items-stretch">
                                    <div class="col-lg-6">
                                        <div class="stats-with-chart-1 block">
                                            <div class="title"> <strong class="d-block">Fire Eruption Likelihood</strong></div>
                                            <div class="row d-flex align-items-end justify-content-between">
                                                <div class="col-6">
                                                    <div class="text"><strong class="d-block dashtext-2"><h1>76%</h1></strong>November 2018</div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="bar-chart chart">
                                                        <div style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                                                        <canvas id="salesBarChart2" style="display: block; width: 194px; height: 97px;" width="194" height="97" class="chartjs-render-monitor"></canvas>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="col-lg-6">
                                        <div class="stats-with-chart-3 block">
                                            <div class="title"> <strong class="d-block">Non-flammable Plants</strong></div>
                                            <div class="row d-flex align-items-end justify-content-between">
                                                <div class="col-10">
                                                    <div class=""><strong class=" dashtext-3" style="display: inline">Santa Cruz CA </strong><strong>has ideal</strong>conditions to plant these fire-resistant:</div>
                                                </div>
                                                <div class="col-7">
                                                    <div class="bar-chart chart">
                                                        <div style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                                                        <ul>
                                                            <li>Red Monkey Flower</li>
                                                            <li>California Fuchsia</li>
                                                            <li>California Lilac</li>
                                                            <li>Yellow Iceplant</li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-md-12">
                            <div class="col-md-12 row">
                                <div class="col-md-4 pull-left" style="float:left">
                                    <img src="~/images/map.png" style="width:100%; " id="foto" alt="">

                                    <img style="width:100%; display:none" src="https://i.imgur.com/YfXjjId.png" id="foto2" />
                                </div>
                                <div class="col-md-4 pull-right" id="secondDiv" style="display:none;float:right !important">

                                    <div class="bar-chart block no-margin-bottom">
                                        <div style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                                        <canvas id="barChartExample1" style="display: block; width: 354px; height: 177px;" width="354" height="177" class="chartjs-render-monitor"></canvas>
                                    </div>
                                    <div class="bar-chart block">
                                        <div style="position: absolute; left: 0px; top: 0px; right: 0px; bottom: 0px; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -1;" class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:1000000px;height:1000000px;left:0;top:0"></div></div><div class="chartjs-size-monitor-shrink" style="position:absolute;left:0;top:0;right:0;bottom:0;overflow:hidden;pointer-events:none;visibility:hidden;z-index:-1;"><div style="position:absolute;width:200%;height:200%;left:0; top:0"></div></div></div>
                                        <canvas id="barChartExample2" style="display: block; width: 354px; height: 177px;" width="354" height="177" class="chartjs-render-monitor"></canvas>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <div class="col-md-12 " data-dismiss="modal" style=" cursor:pointer;background-color:#7127AC; border-radius:0!important; margin-top:5%; padding:15px;border-radius:10px;border:0; text-align:center;font-size:20px;">WARN AUTHORIES</div>
            </div>
        </div>
    </div>

</div>


<!--============================= End Modal =================== -->

@section Scripts{
    <script src="~/js/echarts.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.3.0/snap.svg-min.js"></script>
    <script src="~/js/site.js"></script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDfytPh8CfSlcmsoCWeoDZlO0ddKNy7mM&callback=initMap"
            type="text/javascript"></script>

    <script>
        $('#foto').on('click', function () {
            $(this).css('display', 'none').parent().removeClass('col-md-4').addClass('col-md-8')
            $('#foto2').show(300).css('border-radius', '20px')
            $('#secondDiv').show(300)
        })

        $('#foto2').on('click', function () {
            $(this).css('display', 'none').parent().removeClass('col-md-8').addClass('col-md-4')
            $('#foto').show(10).css('border-radius', '20px')
            $('#secondDiv').hide(10)
        })
    </script>
}
